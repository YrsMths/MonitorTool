<UserControl x:Class="VS_Presentation.WPFControls.WPFControl_DateTimePicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VS_Presentation.WPFControls" Width="230">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="250"/>
            <RowDefinition Height="90"/>
        </Grid.RowDefinitions>
        <local:WPFControl_Calendar x:Name="DatePicker" Grid.Row="0"/>
        <local:WPFControl_TimePicker x:Name="TimePicker" Grid.Row="1"/>
    </Grid>
</UserControl>
